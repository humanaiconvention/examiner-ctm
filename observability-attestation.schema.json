{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Observability Attestation",
  "type": "object",
  "required": ["schemaVersion", "generatedAt", "commit", "workbook", "alerts"],
  "properties": {
    "schemaVersion": { "type": "integer", "minimum": 1 },
    "generatedAt": { "type": "string", "format": "date-time" },
    "commit": { "type": "string" },
    "workbook": {
      "type": "object",
      "required": ["sourceSha", "deployedSha", "bicepSha"],
      "properties": {
        "sourceSha": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "deployedSha": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "bicepSha": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
      },
      "additionalProperties": false
    },
    "alerts": {
      "type": "object",
      "required": ["bicepSha", "thresholds", "catalog"],
      "properties": {
        "bicepSha": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "thresholds": {
          "type": "object",
          "required": ["lcpP75Ms", "inpP75Ms", "fetchFailureRate"],
            "properties": {
              "lcpP75Ms": { "type": "integer", "minimum": 100 },
              "inpP75Ms": { "type": "integer", "minimum": 50 },
              "fetchFailureRate": { "type": "number", "minimum": 0, "maximum": 1 }
            },
            "additionalProperties": false
        },
        "catalog": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["metric", "resourceId", "threshold"],
            "properties": {
              "metric": { "type": "string" },
              "resourceId": { "type": "string" },
              "threshold": { "type": ["integer", "number"] }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
