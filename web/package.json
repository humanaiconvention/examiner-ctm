{
  "name": "web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "version:gen": "node scripts/generate-version.mjs",
  "build": "npm run version:gen && tsc -b && vite build && npm run postbuild:health",
  "build:prod": "npm run csp:prod && npm run build",
    "build:analyze": "npm run version:gen && tsc -b && vite build --mode analyze",
    "lint": "eslint .",
    "lint:report": "eslint -f json -o web/eslint-report.json .",
    "lint:all": "eslint --no-ignore ./**/*.{js,jsx,ts,tsx}",
    "lint:all:report": "eslint --no-ignore -f json -o web/eslint-report-all.json ./**/*.{js,jsx,ts,tsx}",
    "lint:print-config": "eslint --print-config src/main.tsx > web/eslint-print-config.json",
    "lint:aggregate": "node scripts/lint-aggregate.mjs",
    "lint:all:aggregate": "npm run lint:all:report && node scripts/lint-aggregate.mjs",
    "lint:compare": "node scripts/eslint-compare.mjs",
    "lint:compare:lint": "node scripts/eslint-compare.mjs --lint --simulate-root",
    "ts:show-config": "node scripts/ts-show-config.mjs",
    "ts:errors:aggregate": "node scripts/ts-errors-aggregate.mjs",
    "eslint:env-scan": "node scripts/eslint-env-scan.mjs",
    "ts:editor-probe": "node scripts/ts-editor-probe.mjs",
    "ts:semantic-diff": "node scripts/ts-semantic-diff.mjs",
    "problem:ts": "node scripts/problem-ts.mjs",
    "typecheck": "tsc --noEmit",
    "diag:ts": "node scripts/diag-ts.mjs",
    "diag:ts:allow": "ALLOW_TS_ERRORS=true node scripts/diag-ts.mjs",
    "test": "vitest run",
    "test:report": "vitest run --reporter=default --reporter=junit --outputFile=web/test-report/junit.xml --reporter=json --outputFile=web/test-report/results.json",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "coverage:badge": "node scripts/coverage-badge.mjs",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:visual": "playwright test tests/visual.spec.ts",
    "test:a11y": "playwright test tests/accessibility.spec.ts",
    "preview": "vite preview",
  "preview:static": "serve -l 5060 dist",
  "build:preview": "npm run build && npm run preview:static",
  "preview:auto": "node scripts/preview-with-health.mjs",
  "postbuild:health": "node scripts/generate-health-readiness.mjs",
  "readyz:compare": "node scripts/compare-readyz.mjs",
  "verify:index-hash-change": "node scripts/check-index-hash-changed.mjs",
    "lhci": "lhci autorun --upload.target=filesystem",
    "perf:check": "node scripts/check-lighthouse-thresholds.mjs",
    "size:manifest": "node scripts/bundle-size.mjs manifest",
    "size:check": "node scripts/bundle-size.mjs check",
    "preview:build": "npm run build && npm run preview",
    "serve:dist": "npx serve -l 5000 dist",
    "manifest:diff": "node scripts/asset-manifest-diff.mjs",
    "manifest:snapshot": "node scripts/asset-manifest-diff.mjs --snapshot",
    "preview:dist": "node scripts/preview-dist.mjs",
    "sw:emit": "cp src/sw.ts dist/sw.js 2>/dev/null || copy src\\sw.ts dist\\sw.js",
    "security:audit": "npm audit --omit=dev --json > audit.json || true",
    "security:audit:ci": "audit-ci --config .audit-ci.jsonc --json --output audit-ci.json || true",
    "security:convert-sarif": "node scripts/audit-to-sarif.mjs",
    "verify:inline-version": "node scripts/verify-inline-version.mjs",
    "verify:inline-version:hash": "node scripts/verify-inline-version.mjs --with-hash",
    "verify:deployed": "node scripts/verify-deployed-integrity.mjs --url https://www.humanaiconvention.com/ --json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "verify": "npm run lint && npm run typecheck && npm run build && npm run security:audit",
    "size:budget": "node scripts/asset-budget-check.mjs --maxRawKB 250 --maxGzipKB 80",
    "generate:sri": "node scripts/generate-sri.mjs"
    ,"csp:dev": "ts-node scripts/generate-csp.ts dev",
    "csp:prod": "ts-node scripts/generate-csp.ts prod",
    "csp:refresh": "npm run csp:dev"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "@microsoft/applicationinsights-web": "^3.0.0",
    "web-vitals": "^4.2.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@cyclonedx/cyclonedx-npm": "4.0.3",
    "@eslint/js": "^9.36.0",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "audit-ci": "^7.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^2.1.4",
    "zxcvbn": "^4.4.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
