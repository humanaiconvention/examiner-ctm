{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Minimal CycloneDX SBOM Subset Schema",
  "type": "object",
  "required": ["bomFormat", "specVersion", "version"],
  "properties": {
    "bomFormat": {"const": "CycloneDX"},
    "specVersion": {"type": "string", "pattern": "^1\\.(4|5)$"},
    "version": {"type": "integer", "minimum": 1},
    "metadata": {"type": "object"},
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {"type": "string"},
          "version": {"type": "string"},
          "purl": {"type": "string"},
          "type": {"type": "string"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
