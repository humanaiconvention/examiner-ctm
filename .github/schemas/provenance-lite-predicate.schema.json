{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://humanaiconvention.com/schema/provenance-lite-predicate.v1.json",
  "title": "Provenance Lite Predicate v1",
  "type": "object",
  "required": ["_type", "buildType", "builder", "reproducible", "materials", "metadata"],
  "properties": {
    "_type": {"const": "https://humanaiconvention.com/attestation/provenance-lite@v1"},
    "buildType": {"type": "string"},
    "builder": {
      "type": "object",
      "required": ["id", "workflow", "runId"],
      "properties": {
        "id": {"type": "string"},
        "workflow": {"type": "string"},
        "runId": {"type": "string"}
      },
      "additionalProperties": false
    },
    "reproducible": {"type": "boolean"},
    "materials": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["uri", "digest"],
        "properties": {
          "uri": {"type": "string"},
          "digest": {
            "type": "object",
            "minProperties": 1,
            "patternProperties": {
              "^[a-zA-Z0-9_.-]+$": {"type": "string"}
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    },
    "metadata": {
      "type": "object",
      "required": ["buildStartedOn", "buildFinishedOn"],
      "properties": {
        "buildStartedOn": {"type": "string", "format": "date-time"},
        "buildFinishedOn": {"type": "string", "format": "date-time"}
      },
      "additionalProperties": false
    },
    "sbomSha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
    "invocation": {
      "type": "object",
      "properties": {
        "parameters": {"type": "object"},
        "environment": {"type": "object"}
      },
      "additionalProperties": true
    },
    "buildConfig": {"type": "object", "additionalProperties": true},
    "completeness": {
      "type": "object",
      "properties": {
        "parameters": {"type": "boolean"},
        "materials": {"type": "boolean"},
        "environment": {"type": "boolean"}
      },
      "additionalProperties": false
    },
    "buildInvocationId": {"type": "string"},
    "environment": {"type": "object", "additionalProperties": true},
    "toolVersions": {"type": "object", "additionalProperties": true},
    "parameters": {"type": "object", "additionalProperties": true}
  },
  "additionalProperties": false
}
