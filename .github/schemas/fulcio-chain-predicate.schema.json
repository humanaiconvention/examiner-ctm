{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://humanaiconvention.com/schema/fulcio-chain-predicate.v1.json",
  "title": "Fulcio Chain Predicate v1",
  "type": "object",
  "required": ["_type", "subject", "timestamp", "description", "metadata"],
  "properties": {
    "_type": {"const": "https://humanaiconvention.com/attestation/fulcio-chain@v1"},
    "subject": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "digest"],
        "properties": {
          "name": {"type": "string"},
          "digest": {
            "type": "object",
            "required": ["sha256"],
            "properties": {"sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"}},
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "timestamp": {"type": "string", "format": "date-time"},
    "description": {"type": "string"},
    "metadata": {
      "type": "object",
      "required": ["format"],
      "properties": {"format": {"type": "string", "enum": ["pem+concat"]}},
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
