{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://humanaiconvention.com/schemas/integrity-report-predicate.schema.json",
  "title": "Integrity Report Predicate",
  "type": "object",
  "required": ["_type", "subject", "timestamp", "description", "reportFields"],
  "properties": {
    "_type": {
      "type": "string",
      "const": "https://humanaiconvention.com/attestation/integrity-report@v1"
    },
    "subject": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "digest"],
        "properties": {
          "name": { "type": "string", "const": "integrity-report.json" },
          "digest": {
            "type": "object",
            "required": ["sha256"],
            "properties": {
              "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "timestamp": { "type": "string", "format": "date-time" },
    "description": { "type": "string" },
    "reportFields": {
      "type": "object",
      "required": ["match", "baselineSha256", "remoteSha256", "url", "elapsedMs"],
      "properties": {
        "match": { "type": "boolean" },
        "baselineSha256": { "type": ["string", "null"], "pattern": "^[a-f0-9]{64}$" },
        "remoteSha256": { "type": ["string", "null"], "pattern": "^[a-f0-9]{64}$" },
        "url": { "type": "string", "format": "uri" },
        "elapsedMs": { "type": ["number", "integer"], "minimum": 0 },
        "error": { "type": ["string", "null"] }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "$defs": {
    "digest": {
      "type": "object",
      "required": ["sha256"],
      "properties": {
        "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
      },
      "additionalProperties": false
    },
    "predicateV1": {
      "type": "object",
      "required": ["_type"],
      "properties": {
        "_type": { "const": "https://humanaiconvention.com/attestation/integrity-report@v1" }
      }
    },
    "predicateV2": {
      "type": "object",
      "required": ["_type"],
      "properties": {
        "_type": { "const": "https://humanaiconvention.com/attestation/integrity-report@v2" },
        "reportFields": {
          "type": "object",
          "description": "Potential future extended fields; accept any for forward compatibility",
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  }
}
