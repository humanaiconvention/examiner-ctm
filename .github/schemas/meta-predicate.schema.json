{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Meta Predicate Schema v1",
  "type": "object",
  "required": ["_type", "predicateVersion", "subject", "timestamp", "predicates"],
  "properties": {
    "_type": {"const": "https://humanaiconvention.com/attestation/meta-predicate@v1"},
    "predicateVersion": {"type": "string", "const": "1.0"},
    "timestamp": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}T"},
    "description": {"type": "string"},
    "subject": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "digest"],
        "properties": {
          "name": {"type": "string"},
          "digest": {
            "type": "object",
            "required": ["sha256"],
            "properties": {"sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"}}
          }
        },
        "additionalProperties": false
      }
    },
    "predicates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "type", "sha256"],
        "properties": {
          "name": {"type": "string"},
          "type": {"type": "string", "pattern": "^https://humanaiconvention.com/attestation/.+@v[0-9]+$"},
            "sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"}
        },
        "additionalProperties": false
      }
    },
    "ordering": {"type": "array", "items": {"type": "string"}},
    "run": {
      "type": "object",
      "required": ["workflow", "runId"],
      "properties": {
        "workflow": {"type": "string"},
        "runId": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
