{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://humanaiconvention.com/schema/integrity-report-predicate.v2.json",
  "title": "Integrity Report Predicate v2",
  "type": "object",
  "required": ["_type", "predicateVersion", "subject", "timestamp", "description", "report"],
  "properties": {
    "_type": {"const": "https://humanaiconvention.com/attestation/integrity-report@v2"},
    "predicateVersion": {"type": "string", "pattern": "^2\\.0$"},
    "subject": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "digest"],
        "properties": {
          "name": {"type": "string"},
          "digest": {
            "type": "object",
            "required": ["sha256"],
            "properties": {
              "sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"}
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "timestamp": {"type": "string", "format": "date-time"},
    "description": {"type": "string"},
    "report": {
      "type": "object",
      "required": ["status", "hashes", "metrics", "url"],
      "properties": {
        "status": {"type": "boolean"},
        "hashes": {
          "type": "object",
            "required": ["baseline", "remote"],
            "properties": {
              "baseline": {"type": ["string", "null"], "pattern": "^[a-f0-9]{64}$"},
              "remote": {"type": ["string", "null"], "pattern": "^[a-f0-9]{64}$"}
            },
            "additionalProperties": false
        },
        "metrics": {
          "type": "object",
          "required": ["elapsedMs"],
          "properties": {
            "elapsedMs": {"type": ["integer", "null"], "minimum": 0}
          },
          "additionalProperties": false
        },
        "url": {"type": "string", "format": "uri"},
        "error": {"type": ["string", "null"]}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
